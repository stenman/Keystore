<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!--  Needed for system properties replacement  -->
    <!-- Following will only work with spring 3 	-->
    <context:property-placeholder location="classpath*:flyway.properties"
                                  ignore-resource-not-found="true"
                                  system-properties-mode="OVERRIDE"/>

    <!-- import the data source bean -->
    <import resource="test-in-memory-database.xml"/>

</beans>